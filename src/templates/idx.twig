{% extends 'layout/_base.twig' %}

{% set bodyClass = '' %}
{% set pageTitle = 'IDX' %}

{% block content %}

  <!-- Slider -->
  <section class="section feature-13" data-slider-parent="true">
    <div class="container container--mobile-fixed">
      <div class="section__content">
        <h2 class="section__title">IDX in 19 Languages</h2>
      </div>

      <div class="section__body section__body--center">
        <div class="section__content">
          <div class="section__slider" data-slider="slider">
            {% for slide in idx.slider %}
              <div class="section__slide slick-slide">
                <h3 class="section__subtitle">{{ slide.title }}</h3>
                <div class="section__description text-lg {% if slide.type == "lg" %} text-lg{% endif %}">
                  {% if slide.text %}
                    <p>{{ slide.text }}</p>
                  {% endif %}
                  {% if slide.list %}
                    <ul class="list-dot">
                      {% for item in slide.list  %}
                        <li>{{ item }}</li>
                      {% endfor %}
                    </ul>
                  {% endif %}
                </div>
              </div>
            {% endfor %}
          </div>

          <div class="section__action hidden-md-down">
            <a href="#" class="button button--primary">Get started</a>
          </div>
        </div>

        <div class="section__object">
          <div class="section__template section__template--shadow" data-slider="slider-nav">
            {% for slide in idx.slider %}
              <div class="section__video">
                {% if slide.video %}
                  <video muted playsinline autoplay loop>
                    <source src="./assets/video/{{ slide.video }}.mp4" type="video/mp4">
                    <p>Your browser doesn't support HTML5 video. Here is a <a href="./assets/video/{{ slide.video }}.mp4">link to the video</a> instead.</p>
                  </video>
                {% endif %}
              </div>
            {% endfor %}
          </div>
        </div>
      </div>

      <div class="section__action hidden-lg-up">
        <a href="#" class="button button--primary">Get started</a>
      </div>
    </div>

    <div class="section__decor decor-complex-5"></div>
  </section>

  <!-- Translations -->
  <section class="section translations bg-blue">
    <div class="container container--mobile-fixed">
      <div class="intro text-center">
        <h2 class="intro__title">Xomio Listings Translation</h2>
        <div class="intro__description">
          <p>Xomio listings are translated using the Immobel translation engine: the world’s largest translation memory of real-estate-specific terms and phrases. Every translation has been provided and checked by industry experts. That’s why we’re trusted  by the biggest names in real estate.</p>
        </div>
      </div>

      <ul class="section__lang-list lang-list">
        {% for lang in idx.langs %}
          <li class="lang-list__item"><i class="lang-list__icon icon-lang"></i><span {% if lang.dir %}dir="{{ lang.dir }}"{% endif %}>{{ lang.name }}</span></li>
        {% endfor %}
      </ul>
    </div>

    <div class="section__decor section__decor--1 decor-dots-5"></div>
    <div class="section__decor section__decor--2 decor-lines-12"></div>
  </section>

  <!-- Contact us -->
  <section class="section contact-us" id="become-an-mls-partner">
    <div class="container container--mobile-fixed">
      <div class="section__body">
        <div class="section__content">
          <h2 class="section__title">Become an MLS <br>Partner!</h2>
          <div class="section__description">
            <p>The team behind Xomio have been working with MLS organizations across North America for 20 years.</p>
            <p>Our listings translation and web design services help your realtors deliver higher quality service to their markets.</p>
            <p>Get in touch with us today to find out about our partner programs, and get Xomio working for your members, and for your market.</p>
          </div>
        </div>

        <div class="section__object">
          <form action="" method="POST" class="section__form form" novalidate="novalidate" data-parsley-validate>
            <fieldset class="form__fieldset">
              <legend class="form__legend h3">Tell us more about you.</legend>

              <div class="row row--md">
                <div class="col-xs-12 col-md-6">
                  <div class="form__group is-required">
                    <label class="form__label" for="first-name">First name</label>
                    <div class="form__field">
                      <input type="text" id="first-name" class="form__input" required>
                    </div>
                  </div>
                </div>
                <div class="col-xs-12 col-md-6">
                  <div class="form__group is-required">
                    <label class="form__label" for="last-name">Last name</label>
                    <div class="form__field">
                      <input type="text" id="last-name" class="form__input" required>
                    </div>
                  </div>
                </div>
              </div>

              <div class="row row--md">
                <div class="col-xs-12 col-md-6">
                  <div class="form__group is-required">
                    <label class="form__label" for="company">Your company</label>
                    <div class="form__field">
                      <input type="text" id="company" class="form__input" required>
                    </div>
                  </div>
                </div>
                <div class="col-xs-12 col-md-6">
                  <div class="form__group is-required">
                    <label class="form__label" for="role">Your role</label>
                    <div class="form__field">
                      <input type="text" id="role" class="form__input" required>
                    </div>
                  </div>
                </div>
              </div>

              <div class="row row--md">
                <div class="col-xs-12 col-md-6">
                  <div class="form__group is-required">
                    <label class="form__label" for="email">Email</label>
                    <div class="form__field">
                      <input type="email" id="email" class="form__input" required>
                    </div>
                  </div>
                </div>
                <div class="col-xs-12 col-md-6">
                  <div class="form__group">
                    <label class="form__label" for="mls">Phone</label>
                    <div class="form__field">
                      <input type="text" id="phone" class="form__input" data-mask="phone" placeholder="+1 234 567 89 00">
                    </div>
                  </div>
                </div>
              </div>

              <div class="form__group is-required">
                <label class="form__label" for="country">Country</label>
                <div class="form__field">
                  <select id="country" data-element="select-default" data-placeholder="Select your country" data-search-placeholder="Search country" required>
                    <!-- Empty option for placeholder -->
                    <option></option>
                    {% for country in countries %}
                      <option value="{{ country.code }}">{{ country.name }}</option>
                    {% endfor %}
                  </select>
                </div>
              </div>

              <div class="form__group is-required">
                <label class="form__label" for="message">How can we help?</label>
                <div class="form__field">
                  <textarea id="message" rows="4" class="form__input" placeholder="Enter text" required></textarea>
                </div>
              </div>
            </fieldset>

            <div class="form__submit">
              <input type="submit" class="button button--primary button--block" value="Send">
            </div>
          </form>
          <div class="section__object-bg decor-dots-bg-2"></div>
        </div>
      </div>
    </div>

    <div class="section__decor section__decor--5 decor-complex-8 hidden-lg-down"></div>
  </section>

{% endblock %}

{% block modals %}
{% endblock %}