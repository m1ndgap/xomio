<div class="tags-popup" data-component="tags-popup">
  <button class="tags-popup__close" data-element="tags-popup-close" title="Close"></button>

  <div class="tags-popup__slider" data-slider="tags">
    {% for section in home|slice(2,1) %}
      {% for item in section.tags %}
        <div class="tags-popup__slide tag-slide slick-slide tag-{{ item.theme }}" data-arrow-color="{{ item.arrowColor }}">
          <h2 class="tag-slide__title">{{ item.name }}</h2>
        </div>
      {% endfor %}
    {% endfor %}
  </div>
</div>