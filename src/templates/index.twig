{% extends 'layout/_base-fullpage.twig' %}

{% block styles %}
  <link rel="stylesheet" href="./assets/css/home.css?12345646">
{% endblock %}

{% set pageClass = 'page-home' %}

{% block content %}
  <div data-page="fullpage">
    <div class="section home-1" data-fullpage="section">
      {% for slide in home|first.slides %}
        <div class="slide" data-fullpage="slide">
          <div class="container container--mobile-fixed">
            <div class="section__body section__body--center">
              <div class="section__content section__content--lg">
                <h2 class="section__title h1">{{ slide.title }} <span data-element="typewriter" data-word="{{ slide.type }}"></span></h2>
                <div class="section__text ">
                  <ul class="list-plus" data-component="accordion">
                    {% for item in slide.list %}
                      <li class="collapsible is-collapsed" data-element="accordion-item">
                        <div class="collapsible__toggle text-lg" data-element="accordion-toggle">{{ item.title }}</div>
                        <div class="collapsible__content" data-element="accordion-content">
                          <div class="collapsible__body">
                            {{ item.text }}
                          </div>
                        </div>
                      </li>
                    {% endfor %}
                  </ul>
                </div>
              </div>

              <div class="section__object section__object--md">
                {% if slide.video %}
                  <div class="section__video">
                    <video muted playsinline loop data-autoplay>
                      <source src="./assets/video/{{ slide.video }}" type="video/mp4" />
                      <p>Your browser doesn't support HTML5 video. Here is a <a href="./assets/video/{{ slide.video }}">link to the video</a> instead.</p>
                    </video>
                  </div>
                {% endif %}
              </div>
            </div>
          </div>
        </div>
      {% endfor %}

      <div class="section__decor section__decor--1 decor-shape-4">
        <div class="section__decor section__decor--2 decor-lines-9"></div>
      </div>
      <div class="section__decor section__decor--3 hidden-lg-down decor-lines-1"></div>
      <div class="section__decor section__decor--4 hidden-lg-down decor-dots-1"></div>
    </div>

    <div class="section home-2" data-fullpage="section">
      <div class="container">
        <div class="intro text-center">
          <h2 class="intro__title">Whatever language or device your clients are using</h2>
          <h3 class="intro__subtitle font-cursive hidden-xs-down">If they’re <span class="text-primary">looking</span>, they’ll <span class="text-primary">find</span> you.</h3>
        </div>

        <div class="section__body section__body--center">
          <div class="section__content">
            <div class="section__lottie lottie hidden-md-down">
              <lottie-player src="https://assets6.lottiefiles.com/packages/lf20_tkorcb6g.json" data-player="lottie" background="transparent" speed="1" mode="normal" loop autoplay></lottie-player>
            </div>
            <div class="section__lottie lottie lottie--mobile hidden-lg-up">
              <lottie-player src="https://assets9.lottiefiles.com/packages/lf20_vgroulgj.json" data-player="lottie" background="transparent" speed="1" style="width: 100%; height: auto;" loop autoplay></lottie-player>
            </div>
          </div>

          <div class="section__object">
            {% for section in home|slice(1,1) %}
              <div class="screens row" data-slider="slideshow" data-autoplay-speed="4400" data-dots="true">
                {% for item in section.screens %}
                  <div class="screens__slide slick-slide col">
                    <img srcset="./assets/img/screens/{{ item }}.png 1x, ./assets/img/screens/{{ item }}@2x.png 2x" src="./assets/img/screens/{{ item }}.png" alt="" class="section__img">
                  </div>
                {% endfor %}
                <div class="screens__slide slick-slide col">
                  <div class="result-slide">
                    <div class="result-slide__body">
                      <div class="result-slide__title">Your site, in 19 languages, <br>indexed on all major search engines, accessible from any device.</div>
                      <div class="result-slide__subtitle font-cursive">If they’re <span class="text-primary looking-underline">looking</span>, they’ll <span class="text-primary find-underline">find</span> you.</div>
                    </div>
                    <div class="result-slide__decor result-slide__decor--1 hidden-lg-down decor-dots-7"></div>
                    <div class="result-slide__decor result-slide__decor--2 decor-shape-3"></div>
                  </div>
                </div>
              </div>
            {% endfor %}
          </div>
        </div>
      </div>
    </div>

    <div class="section tags" data-fullpage="section">
      <div class="container">
        <div class="intro">
          <h2 class="intro__title">We know you want it</h2>
        </div>

        <div data-component="show-all">
          <ul class="tags__list">
            {% for section in home|slice(2,1) %}
              {% for item in section.tags %}
                <li class="tags__item" data-element="tag-item">
                  <div class="tag tag-{{ item.theme }}" data-element="tag">
                    <a href="#" class="tag__link" data-element="tag-toggle"><i class="tag__link-icon icon-plus"></i> {{ item.name }}</a>
                    <div class="tag__popover" data-element="tag-popover">
                      <div class="tag__popover-body">
                        <p class="tag__popover-text">{{ item.text }}</p>
                        <p class="tag__popover-action">
                          <a href="#" class="tag__popover-more more" data-element="tags-popup-trigger" data-id="{{ loop.index }}">Learn more <i class="more__icon icon-arrow-right"></i></a>
                        </p>
                      </div>
                    </div>
                  </div>
                </li>
              {% endfor %}
            {% endfor %}
          </ul>

          <div class="tags__action hidden-md-up">
            <button class="tags__action-button button button--outline-primary" data-element="show-all-toggle" data-text-on="Show more" data-text-off="Show less">Show more</button>
          </div>
        </div>
      </div>
    </div>

    <div class="section home-4" data-fullpage="section">
      {% for section in home|slice(3,1) %}
        {% for slide in section.slides %}
          <div class="slide" data-fullpage="slide">
