                </div>

                <div class="section__object">
                  {% if slide.video %}
                    <div class="section__video {% if slide.videoClass %} {{ slide.videoClass }} {% else %} {% endif %}">
                      <video muted playsinline loop data-autoplay>
                        <source src="./assets/video/{{ slide.video }}" type="video/mp4" />
                        <p>Your browser doesn't support HTML5 video. Here is a <a href="./assets/video/{{ slide.video }}">link to the video</a> instead.</p>
                      </video>
                    </div>
                  {% endif %}
                </div>
              </div>
            </div>
          </div>
        {% endfor %}
      {% endfor %}
      <div class="section__decor decor-lines-9 hidden-lg-down"></div>
    </div>

